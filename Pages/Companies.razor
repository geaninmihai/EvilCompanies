                        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="Id" Title="Id" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilCompanyName" Title="EvilCompanyName" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilLocation" Title="EvilLocation" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilnessRanking" Title="EvilnessRanking" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilPhone" Title="EvilPhone" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilTakeoverDate" Title="EvilTakeoverDate" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilWebsite" Title="EvilWebsite" />
        <RadzenDataGridColumn TItem="EvilCompanies.Models.EvilApi.GetAll" Property="EvilWorldDominationPlan" Title="EvilWorldDominationPlan" />
    </Columns>
</RadzenDataGrid>